<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Perfil do Usuário</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: snow;
        }
        .container {
            max-width: 800px;
            margin: 20px auto;
            background: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        h1 {
            text-align: center;
            color: #333;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        table th, table td {
            padding: 10px;
            text-align: left;
            border: 1px solid #ddd;
        }
        table th {
            background-color: #f4f4f9;
        }
        .profile-info {
            margin-bottom: 20px;
        }
        .btn {
            display: flex;
            width: 100%;
            justify-content: center;
            align-items: center;
            gap: 25px;
        }
        button {
            padding: 10px 20px;
            border-radius: 4px;
            background-color: #fff;
            color: black;
            cursor: pointer;
            transition: background-color 0.2s ease;
        }
        button a {
            all: unset;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Perfil do Usuário</h1>

        <div class="profile-info">
            <p><strong>Nome:</strong> <%= user.name %></p>
            <p><strong>Email:</strong> <%= user.email %></p>
            <p><strong>Telefone:</strong> <%= user.phone %></p>
            <p><strong>ID do Cliente:</strong> <%= user.customerId %></p>
            <p><strong>Endereço:</strong> <%= user.address || 'N/A' %></p>
        </div>

        <h2>Suas Reservas</h2>
        <% if (reservations.length > 0) { %>
            <table>
                <thead>
                    <tr>
                        <th>Check-In</th>
                        <th>Check-Out</th>
                        <th>Adultos</th>
                        <th>Menores</th>
                        <th>Valor Total</th>
                        <th>Status do Pagamento</th>
                    </tr>
                </thead>
                <tbody>
                    <% reservations.forEach(reservation => { %>
                        <tr>
                            <td><%= reservation.checkIn %></td>
                            <td><%= reservation.checkOut %></td>
                            <td><%= reservation.adults %></td>
                            <td><%= reservation.children + reservation.babies %></td>
                            <td>R$<%= reservation.totalAmount.toFixed(2) %></td>
                            <td><%= reservation.paymentStatus %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <% } else { %>
            <p>Nenhuma reserva encontrada.</p>
        <% } %>
    </div>
    <div class="btn">
        <button onclick="window.location.href='/reserva'"><a href="/reserva">FAZER NOVA RESERVA</a></button>
        <button onclick="window.location.href='/'"><a href="/">Home page</a></button>
    </div>
</body>
</html>
