            <!-- Whatsapp floating button -->
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
            <a style="margin-right: 20px;"  href="https://api.whatsapp.com/send?phone=5511991369956&text=Ol%C3%A1%21%20Gostaria%20de%20saber%20mais%20sobre%20a%20pousada" class="float" target="_blank">
            <i class="fa fa-whatsapp my-float"></i>
            </a>
        </div>
    </div>
</body>
</html>
