            </ul>
            <a class="home-link" href="/#home" aria-label="Página principal (Home)"></a>
        </nav>

        <main>
            <div class="mega-wrapper">
                <div class="container">
                    <h1>Perfil do Usuário</h1>

                    <div class="profile-info">
                        <p><strong>Nome:</strong> <%= user.name %></p>
                        <p><strong>Email:</strong> 
                            <%- user.email.replace('@', '<wbr>@').replace('.', '<wbr>.') %> <!-- For breaking after @ -->
                        </p>
                        <p><strong>Telefone:</strong> <%= user.phone %></p>
                        <p><strong>ID do Cliente:</strong> <%= user.customerId %></p>
                        <p><strong>Endereço:</strong> <%= user.address || 'N/A' %></p>
                    </div>

                    <h2 class="sr-only">Suas Reservas</h2>
                    <% if (reservations.length > 0) { %>
                        <table>
                            <caption>Reservas</caption>
                            <thead class="">
                                <tr>
                                    <th scope="col">Check-In</th>
                                    <th scope="col">Check-Out</th>
                                    <th scope="col">Adultos</th>
                                    <th scope="col">Menores</th>
                                    <th scope="col">Valor Total</th>
                                    <th scope="col">Status do Pagamento</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% reservations.forEach(reservation => { %>
                                    <tr>
                                        <td data-label="CheckIn" data-label-visual="Check-In" data-column="1"
                                        ><%= reservation.checkIn %></td>
                                        <td data-label="checkOut" data-label-visual="check-Out" data-column="2"
                                        ><%= reservation.checkOut %></td>
                                        <td data-label="adults" data-label-visual="Adultos" data-column="3"
                                        ><%= reservation.adults %></td>
                                        <td data-label="Minors" data-label-visual="Menores" data-column="4"
                                        ><%= reservation.children + reservation.babies %></td>
                                        <td data-label="Total" data-label-visual="Total" data-column="5"
                                        >R$<%= reservation.totalAmount.toFixed(2) %></td>
                                        <td data-label="Status" data-label-visual="Status" data-column="6"
                                        ><%= reservation.paymentStatus %></td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    <% } else { %>
                        <p>Nenhuma reserva encontrada.</p>
                    <% } %>
                </div>
                <div class="btn">
                    <button onclick="window.location.href='/reserva'" class="custom-btn"><a href="/reserva">FAZER NOVA RESERVA</a></button>
                    <button onclick="window.location.href='/'" class="custom-btn"><a href="/">Home page</a></button>
                </div>
            </div>
        </main>

